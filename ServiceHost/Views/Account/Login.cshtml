@model Resume.Domain.Dtos.User.LoginDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta content="width=device-width, initial-scale=1" name="viewport" />
	<title>ورود کاربر</title>
	<!-- Favicon-->
	<link rel="icon" href="~/AdminSite/assets/images/favicon.ico" type="image/x-icon">
	<!-- Plugins Core Css -->
	<link href="~/AdminSite/assets/css/app.min.css" rel="stylesheet">
	<link href="~/AdminSite/assets/js/bundles/materialize-rtl/materialize-rtl.min.css" rel="stylesheet">
	<!-- Custom Css -->
	<link href="~/AdminSite/assets/css/style.css" rel="stylesheet" />
	<link href="~/AdminSite/assets/css/pages/extra_pages.css" rel="stylesheet" />
	<link href="~/AdminSite/assets/css/custom-login.css" rel="stylesheet" />
</head>

<body class="light rtl">
	<div class="loginmain">
		<div class="loginCard">
			<div class="rgstr-btn splits">
				<p>خوش آمدید؛ جهت ورود، اطلاعات لازم را وارد نمایید</p>
			</div>
			<div class="wrapper">
				<form id="login" tabindex="500" asp-controller="Account" asp-action="Login" method="post">
					<h3>ورود</h3>
					<div class="mail">
						<input type="text" asp-for="Identifier" id="Identifier" name="Identifier">
						<label for="Identifair">شماره موبایل / ایمیل</label>
						<span class="error-message text-danger" asp-validation-for="Identifier"></span>
					</div>
					<div class="passwd">
						<input type="password" asp-for="Password" id="Password" name="Password">
						<label for="Password">رمزعبور</label>
						<span class="error-message text-danger" asp-validation-for="Password"></span>
					</div>
					<div class="text-right p-t-8 p-b-31">
						<a href="#">
							رمز عبور را فراموش کرده اید؟
						</a>
					</div>
					<div class="submit">
						<button type="submit" class="dark">ورود</button>
					</div>
					<div class="flex-c p-b-112">
						<a href="#" class="login100-social-item bg-fb">
							<i class="fab fa-facebook-f"></i>
						</a>
						<a href="#" class="login100-social-item bg-twitter">
							<i class="fab fa-twitter"></i>
						</a>
						<a href="#" class="login100-social-item bg-google">
							<i class="fab fa-google"></i>
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
	<!-- Plugins Js -->
	<script src="~/AdminSite/assets/js/app.min.js"></script>
	<!-- Extra page Js -->
	<script src="~/AdminSite/assets/js/pages/examples/login-register.js"></script>
</body>

</html>