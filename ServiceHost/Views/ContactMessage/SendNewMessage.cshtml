@model Resume.Domain.Dtos.Contact.CreateContactMessageDto

@{
    ViewData["Title"] = "تماس با من";
}

<div class="col-12 col-md-12 col-lg-10">
	<div class="box box-content">
		<div class="pb-2">
			<h1 class="title title--h1 first-title title__separate">@ViewData["Title"]</h1>
		</div>

		<!-- Contact -->
		<div class="map mapboxgl-map" id="map"><div class="mapboxgl-canary" style="visibility: hidden;"></div><div class="mapboxgl-canvas-container mapboxgl-interactive mapboxgl-touch-drag-pan mapboxgl-touch-zoom-rotate"><canvas class="mapboxgl-canvas" tabindex="0" aria-label="Map" width="887" height="475" style="width: 710px; height: 380px;"></canvas><div id="marker" class="mapboxgl-marker mapboxgl-marker-anchor-center" tabindex="0" style="transform: translate(-50%, -50%) translate(300px, 87px) rotateX(0deg) rotateZ(0deg);"></div></div><div class="mapboxgl-control-container"><div class="mapboxgl-ctrl-top-left"></div><div class="mapboxgl-ctrl-top-right"></div><div class="mapboxgl-ctrl-bottom-left"><div class="mapboxgl-ctrl" style="display: none;"><a class="mapboxgl-ctrl-logo" target="_blank" rel="noopener nofollow" href="https://www.mapbox.com/" aria-label="Mapbox logo"></a></div></div><div class="mapboxgl-ctrl-bottom-right"><div class="mapboxgl-ctrl mapboxgl-ctrl-group"><button class="mapboxgl-ctrl-zoom-in" type="button" title="Zoom in" aria-label="Zoom in"><span class="mapboxgl-ctrl-icon" aria-hidden="true"></span></button><button class="mapboxgl-ctrl-zoom-out" type="button" title="Zoom out" aria-label="Zoom out"><span class="mapboxgl-ctrl-icon" aria-hidden="true"></span></button><button class="mapboxgl-ctrl-compass" type="button" title="Reset bearing to north" aria-label="Reset bearing to north"><span class="mapboxgl-ctrl-icon" aria-hidden="true" style="transform: rotate(0deg);"></span></button></div><div class="mapboxgl-ctrl mapboxgl-ctrl-attrib mapboxgl-attrib-empty"><div class="mapboxgl-ctrl-attrib-inner"></div></div></div></div></div>
		<h2 class="title title--h3">فرم تماس</h2>

        <form asp-controller="ContactMessage" asp-action="SendNewMessage" method="post" class="contact-form" data-toggle="validator" novalidate="true">
			<div class="row">
				<div class="form-group col-12 col-md-6">
					<input asp-for="Fullname" type="text" class="form-control" id="nameContact"  placeholder="نام و نام خانوادگی" required="required" autocomplete="on" oninvalid="setCustomValidity('پر کردن این فیلد ضروری است.')" onkeyup="setCustomValidity('')">
					<div class="help-block with-errors"></div>
				</div>
				<div class="form-group col-12 col-md-6">
					<input asp-for="EmailAddress" type="email" class="form-control" id="emailContact" placeholder="ایمیل (اختیاری)" autocomplete="on">
				</div>
				<div class="form-group col-12 col-md-12">
					<textarea asp-for="Message" class="textarea form-control" id="messageContact" placeholder="پیام..." rows="4" required="required" oninvalid="setCustomValidity('فیلد را پر کنید')" onkeyup="setCustomValidity('')" tabindex="1" style="overflow: hidden; overflow-wrap: break-word; outline: none; height: 124.2px;"></textarea>
					<div class="help-block with-errors"></div>
				</div>
			</div>
			<div class="row">
				<div class="col-12 col-md-6 order-2 order-md-1 text-center text-md-left">
					<div id="validator-contact" class="hidden"></div>
				</div>
				<div class="col-12 col-md-6 order-1 order-md-2 text-left">
					<button type="submit" class="btn disabled"><i class="font-icon icon-send"></i> پیام بفرستید</button>
				</div>
			</div>
		</form>
	</div>

	<!-- Footer -->
	<footer class="footer">© 1399 ملیکا خلیلیان</footer>
</div>