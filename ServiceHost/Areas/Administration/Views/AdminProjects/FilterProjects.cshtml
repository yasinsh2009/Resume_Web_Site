<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="card">
        <div class="body">
            <div class="bootstrap snippet">
                <section id="portfolio" class="gray-bg padding-top-bottom">
                    <!--==== Portfolio Filters ====-->
                    <div class="categories">
                        <ul class="ul-categories">
                            <li class="active">
                                <a href="#" data-filter="*">همه دسته بندی ها</a>
                            </li>
                            <li>
                                <a asp-area="Administration"
                                   asp-controller="AdminProjects"
                                   asp-action="CreateProject"
                                   type="button" class="btn bg-purple btn-circle waves-effect waves-circle waves-float" data-filter="*">
                                    <i class="material-icons">add</i>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <!-- ======= Portfolio items ===-->
                    <div class="projects-container scrollimation in">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <article class="col-md-4 col-sm-6 portfolio-item web-design apps psd">
                                    <div class="portfolio-thumb in">
                                        <a href="#" class="main-link">
                                            <div class="project-create-date">
                                                <span class="label label-info">اضافه شده در @item.CreateDate</span>
                                            </div>
                                            <img class="img-responsive img-center" src="~/content/project/@item.ProjectImage" alt="@item.ProjectTitle">
                                            <span class="project-title">@item.Description</span>
                                            <span class="overlay-mask"></span>
                                        </a>
                                        @* <a class="enlarge cboxElement" href="#" title="Bills Project"><i class="fa fa-expand fa-fw"></i></a> *@
                                        <a class="link" asp-area="Administration" asp-controller="AdminProjects" asp-action="EditProjects"><i class="material-icons">mode_edit</i></a>
                                    </div>
                                    <div class="badge col-purple project-description">@item.ProjectTitle</div>
                                </article>
                            }
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>

