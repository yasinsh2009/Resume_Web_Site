@model Resume.Domain.Dtos.Resume.Skill.EditSkillDto

@{
    ViewData["Title"] = $"ویرایش مهارت {ViewBag.skillTitle}";
}

<partial name="_JqueryValidators" />

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <ul class="breadcrumb breadcrumb-style " style="float:right">
            <li class="breadcrumb-item">
                <h4 class="page-title">@ViewData["Title"]</h4>
            </li>
            <li class="breadcrumb-item bcrumb-1">
                <a asp-area="administration" asp-controller="home" asp-action="index">
                    <i class="fas fa-lightbulb"></i>
                </a>
            </li>
            <li class="breadcrumb-item bcrumb-2">
                <a asp-area="administration" asp-controller="home" asp-action="index">
                    لیست مهارت ها
                </a>
            </li>
            <li class="breadcrumb-item bcrumb-3">
                <a href="#" onclick="return false;">ویرایش مهارت ها</a>
            </li>
        </ul>
    </div>
</div>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    <strong>ویرایش مهارت</strong>
                </h2>
            </div>
            <form asp-area="Administration" asp-controller="AdminResume" asp-action="EditSkill" method="post">
                <div class="body">
                    <div class="row clearfix">
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" class="form-control mb-2" asp-for="SkillTitle" placeholder="عنوان مهارت">
                                    <span class="text-danger" asp-validation-for="SkillTitle"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" class="form-control mb-2" asp-for="SkillPercent" placeholder="درصد توانایی مهارت">
                                    <span class="text-danger" asp-validation-for="SkillPercent"></span>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn-hover color-5 btn-block w-100 rounded">ثبت اطلاعات</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

